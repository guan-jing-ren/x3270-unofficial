html/Lineage.html: mkstand.bash html/license-body.html 
	@rm -f html.tmp
	./mkstand.bash 'x3270 Licensing' html/license-body.html html.tmp
	mv html.tmp html/Lineage.html
	@rm -f html.tmp

ID: $(SOURCES) $(HEADERS)
