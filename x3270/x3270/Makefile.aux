html/FAQ.html: mkstand.bash html/documentation-faq-body.html 
	@rm -f html.tmp
	./mkstand.bash 'x3270 Frequently Asked Questions' html/documentation-faq-body.html html.tmp
	mv html.tmp html/FAQ.html
